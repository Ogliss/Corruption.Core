  <TraitDef>
    <defName>Devotion</defName>
    <ignoreConfigErrors>true</ignoreConfigErrors>
    <degreeDatas>
      <li>
        <label>atheist</label>
        <description>{PAWN_nameDef} does not believe in divinity. There are no gods among the stars, only cruel and powerful forces worthy of contempt.</description>
        <degree>-2</degree>
      </li>
      <li>
        <label>agnostic</label>
        <description>{PAWN_nameDef} holds that one cannot encompass the divine, therefore worshipping gods is a fallacy.</description>
        <degree>-1</degree>
      </li>
      <li>
        <label>fervent believer</label>
        <description>{PAWN_nameDef} strongly believes in the divine.</description>
        <degree>1</degree>
      </li>
      <li>
        <label>fanatic</label>
        <description>{PAWN_nameDef}'s life is dedicated to the divine and believes are worth to go to war for.</description>
        <degree>2</degree>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

