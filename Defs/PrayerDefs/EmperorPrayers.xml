<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <Corruption.Core.Gods.PrayerDef Name="EmperorPrayerBase" Abstract="True">
    <dedicatedTo>Emperor</dedicatedTo>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_LitanyToDuty</defName>
    <label>litany to duty</label>
    <prayerLines>
      <li>Give me the strength</li>
      <li>to carry my duty through</li>
      <li>and smite those</li>
      <li>who seek to thwart me.</li>      
    </prayerLines>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_LitanyToWork</defName>
    <label>litany to work</label>
    <prayerLines>
      <li>Blessed are those</li>
      <li>who by their hands</li>
      <li>do the Emperors work</li>
      <li>in light and dark.</li>
    </prayerLines>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_LitanyToHope</defName>
    <label>litany to hope</label>
    <prayerLines>
      <li>By your will I endure</li>
      <li>By your will I toil.</li>
      <li>By your will I labour.</li>
      <li>To bask in your light.</li>
    </prayerLines>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_LitanyToPiety</defName>
    <label>litany to piety</label>
    <prayerLines>
      <li>By my heart.</li>
      <li>By my life.</li>
      <li>By my soul.</li>
      <li>I pledge myself to thee.</li>
    </prayerLines>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_LitanyToLight</defName>
    <label>litany to light</label>
    <prayerLines>
      <li>Let his light shine.</li>
      <li>Let the darkness fade.</li>
      <li>Bring forth what is good.</li>
      <li>To lay before him.</li>
    </prayerLines>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_WarriorI</defName>
    <label>warriors prayer I</label>
    <prayerLines>
      <li>I offer my life to the Emperor.</li>
      <li>I pray that He accepts it.</li>
      <li>I offer my strength to the Emperor.</li>
      <li>I pray that he redresses it.</li>
    </prayerLines>
    <preferredWorktags>
      <li>Violent</li>
    </preferredWorktags>
  </Corruption.Core.Gods.PrayerDef>

  <Corruption.Core.Gods.PrayerDef ParentName="EmperorPrayerBase">
    <defName>Prayer_WarriorII</defName>
    <label>warriors prayer II</label>
    <prayerLines>
      <li>I offer my blood to the Emperor.</li>
      <li>I pray that it quenches His thirst.</li>
      <li>I offer my body on the altar of the battlefield.</li>
      <li>I pray He grants me a noble death.</li>      
    </prayerLines>
    <preferredWorktags>
      <li>Violent</li>
    </preferredWorktags>
  </Corruption.Core.Gods.PrayerDef>
  
  
</Defs>