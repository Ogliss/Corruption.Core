<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef Abstract="True" Name="PlayerFactionBase_IoM" ParentName="PlayerFactionBase">
    <label>Imperial Outpost</label>
    <description>An imperial outpost on the fringes of the Imperium.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>Colonist_IoM</basicMemberKind>
    <pawnSingular>colonist</pawnSingular>
    <pawnsPlural>colonists</pawnsPlural>
    <techLevel>Spacer</techLevel>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <geneticVariance>1</geneticVariance>
    <startingResearchTags>
      <li>ClassicStart</li>
    </startingResearchTags>
    <startingTechprintsResearchTags>
      <li>ClassicStart</li>
      <li>ClassicStartTechprints</li>
    </startingTechprintsResearchTags>
    <apparelStuffFilter>
      <thingDefs>
        <li>Synthread</li>
      </thingDefs>
    </apparelStuffFilter>
  </FactionDef>

  <FactionDef Abstract="True"  Name="PlayerFactionBase_Chaos" ParentName="PlayerFactionBase">
    <defName>PlayerColony_Chaos</defName>
    <label>Chaos Cult</label>
    <description>A colony of vile heretics.</description>
    <isPlayer>true</isPlayer>
    <basicMemberKind>Colonist_Chaos</basicMemberKind>
    <pawnSingular>cultist</pawnSingular>
    <pawnsPlural>cultists</pawnsPlural>
    <techLevel>Industrial</techLevel>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <backstoryFilters>
      <li>
        <categories>
          <li>Offworld</li>
        </categories>
      </li>
    </backstoryFilters>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <geneticVariance>1</geneticVariance>
    <startingResearchTags>
      <li>ClassicStart</li>
    </startingResearchTags>
    <startingTechprintsResearchTags>
      <li>ClassicStart</li>
      <li>ClassicStartTechprints</li>
    </startingTechprintsResearchTags>
    <apparelStuffFilter>
      <stuffCategoriesToAllow>
        <li>Leathery</li>
        <li>Fabric</li>
      </stuffCategoriesToAllow>
      <disallowedThingDefs>
        <li>Synthread</li>
        <li>Hyperweave</li>
        <li>Plasteel</li>
      </disallowedThingDefs>
    </apparelStuffFilter>
  </FactionDef>

</Defs>